.wrapper-contacts
	max-width 946px
	overflow hidden
	position relative
	height 75px
	margin 0 auto
	.clock-search
		position absolute
		background url(../images/clock_input.png) no-repeat
		height 23px
		width 23px
		top 25px
		left 270px
		z-index 2
	input
		z-index 1
		float left
		position relative
		width 300px
		height 45px
		margin-right 20px
		margin-bottom 10px
		margin-top 15px
		border none
		outline none
		padding-left 10px
	::-webkit-input-placeholder 
		font-family "NexaBold"
		color #959595
    
	::-moz-placeholder
		font-family "NexaBold"
		color #959595
	select
		margin-bottom 10px
		margin-top 15px
		float left
		position relative
		width 140px
		z-index 1
		height 45px
		font-family "NexaBold"
		font-size 12px
		color #959595
		border none
		-webkit-appearance none
		text-align-last center
		line-height 15px
		padding-right 17px
		outline none

	.map-pin-find
		position absolute
		background url(../images/map_pin_find.png) no-repeat
		height 17px
		width 11px
		top 28px
		left 344px
		z-index 2
	.arrow-find
		position absolute
		background #8f8f8f
		width 43px
		height 45px
		left 426px
		top 15px
		z-index 2
		border-left 1px solid #d8d8d8
		p
			font-size 11px
			z-index 3
			text-align center
			cursor pointer
			color #fff
			-webkit-transform rotate(90deg)
			-moz-transform rotate(90deg)
			font-family "Quicksand"
			padding 10px 20px
